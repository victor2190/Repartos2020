<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

<TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=""
    android:textSize="25dp"
    android:layout_marginTop="20dp"

    />

    <Button
        android:id="@+id/bIgresar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:text="Nueva Encomienda"
        android:onClick="formularioIngresar"
        />

    <Button
        android:id="@+id/bLista"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Lista encomiendas"
        android:layout_marginTop="10dp"
        android:onClick="verLista"
        />
    <Button
        android:id="@+id/bEliminar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Eliminar entregados"
        android:layout_marginTop="10dp"
        android:onClick="eliminar"
        />
    <Button
        android:id="@+id/bMapa"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Ver mapa"
        android:layout_marginTop="10dp"
        android:onClick="mapa"
        />

</LinearLayout>